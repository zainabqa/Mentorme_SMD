<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/screencircle2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/screencircle2"
        style="@style/screencircleStyle" />

    <ImageView
        android:id="@+id/left902"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left90circle2"
        style="@style/left90style" />

    <ImageView
        android:id="@+id/leafin_circle2"
        style="@style/leaftinStyle"
        android:translationX="-95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/screencircle2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/leafincircle2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"

        style="@style/custom_card_style"

        android:layout_width="match_parent"
        android:layout_height="575dp"
        app:cardBackgroundColor="@color/cardcolor"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/dont_have"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="480dp"
            android:layout_marginBottom="0dp"
            android:text="Don't have an account?"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="227dp"
            android:layout_marginTop="480dp"
            android:layout_marginBottom="0dp"
            android:text="Sign Up"
            android:textAlignment="viewStart"
            android:textColor="@color/textcolordarker"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Loginview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingVertical="2dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="65dp"
            android:fontFamily="sans-serif"
            android:text="@string/email"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"

            android:layout_marginEnd="20dp"

            android:background="@drawable/login_inputs"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:paddingTop="3dp"
            android:radius="12dp" />

        <TextView
            android:id="@+id/passwordlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="175dp"
            android:layout_marginEnd="20dp"

            android:background="@drawable/login_inputs"
            android:ems="10"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingTop="3dp" />

        <Button
            android:id="@+id/Login_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="300dp"
            android:backgroundTint="@color/white"
            android:text="@string/login"
            android:textColor="@color/cardcolor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <Button
            android:id="@+id/forgotyourpass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="222dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/cardcolor"
            android:text="Forgot Your Password?"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/loginmentor"
        style="@style/mentorStyle"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="198dp"

        android:layout_marginBottom="50dp"
        android:text="mentor"
        android:textColor="@color/textcolor"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left902"
        app:layout_constraintTop_toBottomOf="@+id/leafin_circle2" />

    <TextView
        android:id="@+id/loginme"
        style="@style/meStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="72dp"
        android:text="me"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loginmentor"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>