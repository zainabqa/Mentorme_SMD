<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screencolor"
    tools:context=".Photo">

    <ImageView
        android:id="@+id/photorec"
        android:layout_width="match_parent"
        android:layout_height="520dp"

        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/photo_rectangle" />

    <ImageView
        android:id="@+id/closeicon"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"

        app:srcCompat="@drawable/close" />

    <ImageView
        android:id="@+id/hdr"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@id/closeicon"

        app:srcCompat="@drawable/hdr_on" />

    <ImageView
        android:id="@+id/brightness"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@id/hdr"

        app:srcCompat="@drawable/wb_sunny" />

    <ImageView
        android:id="@+id/photobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photorec"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/photobar" />


    <ImageButton
        android:id="@+id/Clickphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photobar"

        android:layout_marginStart="140dp"
        android:layout_marginTop="15dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Button Description"
        android:onClick="onClickHandler"
        android:src="@drawable/photoclick" />

    <ImageView
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photobar"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/gallery_icon" />

    <ImageView
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photobar"
        android:layout_marginStart="280dp"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/videoiconinphoto" />

</RelativeLayout>
