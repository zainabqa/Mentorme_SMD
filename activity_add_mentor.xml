<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screencolor"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".AddMentor">

    <ImageView
        android:id="@+id/circles"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView_addmentor"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape" />

    <TextView
        android:id="@+id/addNewMentor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-45dp"
        android:layout_marginBottom="565dp"
        android:text="Add New Mentor"
        android:textColor="#157177"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/HelpUsExpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="510dp"
        android:text="Help us expand!"
        android:textColor="#157177"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinementor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".22" />




    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView_addmentor"

        style="@style/custom_card_style"

        android:layout_width="match_parent"
        android:layout_height="585dp"
        app:cardBackgroundColor="@color/cardcolor"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelinementor"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/upoadiconboundary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/uploadvideo_icon" />

        <ImageView
            android:id="@+id/upoadpiciconboundary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/uploadvideo_icon" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/camera" />

        <ImageView
            android:id="@+id/videocam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/videocamera" />

        <TextView
            android:id="@+id/upload_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/noto_sans"
            android:text="Upload Video"
            android:textColor="@color/addmentor_colors"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/upload_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/noto_sans"
            android:text="Upload Photo"
            android:textColor="@color/addmentor_colors"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/addmentor_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="125dp"
            android:text="Name"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/nameinput"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="155dp"
            android:background="@drawable/login_inputs"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="15dp"
            android:text="Enter Name"
            android:textAlignment="textStart"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/addmentor_Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="205dp"
            android:text="Description"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/Descinput"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="235dp"
            android:background="@drawable/login_inputs"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="15dp"
            android:text="Enter Description"
            android:textAlignment="textStart"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/addmentor_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="285dp"
            android:text="Status"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="310dp"
            android:backgroundTint="@color/white">

            <AutoCompleteTextView
                android:id="@+id/addmentor_dropdown"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_inputs"
                android:backgroundTint="@color/white"
                android:hint="Availibility"
                android:inputType="none"


                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_upload"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="395dp"
            android:backgroundTint="#157177"
            android:text="Upload"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/arrowleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="660dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left" />


</androidx.constraintlayout.widget.ConstraintLayout>