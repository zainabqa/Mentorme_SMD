<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/screencolor"
    android:orientation="vertical"
    tools:context=".ForgotPassword">


    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/leftmargin"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif"
        android:text="@string/forgotpassword"
        android:textColor="@color/textcolordarker"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="181dp" />

    <TextView
        android:id="@+id/forgotdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/leftmargin"
        android:layout_marginTop="10dp"
        android:text="@string/description"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:text="@string/email"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="@dimen/leftmargin"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"

        android:radius="12dp"

        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:background="@drawable/rounded_edittext"/>

    <Button
        android:id="@+id/button_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#146F75"
        android:text="@string/sendbutton"
        android:textSize="17sp"
        app:cornerRadius="12dp" />

    <TextView
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:text="@string/remember_your_password"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="-23dp"
        android:text="@string/login"
        android:textColor="@color/textcolordarker"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="-430dp"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

</LinearLayout>