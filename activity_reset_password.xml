<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/screencolor"
    android:orientation="vertical"
    tools:context=".ResetPassword">



    <TextView
        android:id="@+id/resetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/leftmargin"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif"
        android:text="Reset Password?"
        android:textColor="@color/textcolordarker"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="181dp" />

    <TextView
        android:id="@+id/resetdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/leftmargin"
        android:layout_marginTop="10dp"
        android:text="@string/reserpass_description"
        android:textSize="18sp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/res_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="30dp"
        android:text="New Password"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextReset_pass"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"

        android:background="@drawable/login_inputs"
        android:ems="10"
        android:hint="Enter New Password"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:paddingTop="3dp" />

    <TextView
        android:id="@+id/confirm_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:text="Confirm Password"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextconfirm_pass"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"

        android:background="@drawable/login_inputs"
        android:ems="10"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:paddingTop="3dp" />

    <Button
        android:id="@+id/button_resetPass"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#146F75"
        android:text="Reset Password"
        android:textSize="17sp"
        app:cornerRadius="12dp" />

    <TextView
        android:id="@+id/dontreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:text="Don't want to reset password?"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/logininreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="270dp"
        android:layout_marginTop="-21dp"
        android:text="@string/login"
        android:textColor="@color/textcolordarker"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="-520dp"
        app:srcCompat="@drawable/baseline_arrow_back_24" />



</LinearLayout>